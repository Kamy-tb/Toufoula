<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignalementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:scrollbars="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="25dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_margin="20dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/emergency">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signalez un cas de maltraitance"
                android:textSize="18dp">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <FrameLayout

                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/my_border_white"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/form"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/form" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formulaire"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom">

                </TextView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/my_border_white"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/imagefromcamera"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_photo" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="45dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom">

                </TextView>
            </FrameLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/my_border_white"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/video" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VidÃ©o"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom">

                </TextView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/my_border_white"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/vocal"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/vocal" />
                <TextView
                    android:id="@+id/vocaltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vocal"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="48dp"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:layout_gravity="bottom">
                </TextView>
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>